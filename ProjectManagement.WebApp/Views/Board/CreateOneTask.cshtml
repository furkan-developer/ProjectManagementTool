@model CreateOneTaskViewModel

@{
    ViewData["Title"] = "CreateOneTask";
    Layout = "~/Views/Shared/_BootstrapLayout.cshtml";
    Context.Request.QueryString.Add("name", "furkan");
}

<h1>Create Task</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOneTask">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StageId" value="@ViewData["stageId"]">
            <div class="form-group mb-2">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
              <div class="form-group mb-2">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div> *@
            <div class="form-group mb-2">
                <label asp-for="DueDate" class="control-label"></label>
                <input asp-for="DueDate" class="form-control" />
                <span asp-validation-for="DueDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="control-label mb-1">Priority</label>

                <div class="d-flex">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Priority" value="@JobPriority.low" checked>
                        <label class="form-check-label" asp-for="Priority">
                            Low
                        </label>
                    </div>
                    <div class="form-check ms-2">
                        <input class="form-check-input" type="radio" asp-for="Priority" value="@JobPriority.medium">
                        <label class="form-check-label" asp-for="Priority">
                            Medium
                        </label>
                    </div>
                    <div class="form-check ms-2">
                        <input class="form-check-input" type="radio" asp-for="Priority" value="@JobPriority.high">
                        <label class="form-check-label" asp-for="Priority">
                            Heigh
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group mb-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a href="/Board/GetDetailsOneBoard?boardId=@TempData["BoardId"]" class="btn btn-warning">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
